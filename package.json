{
  "name": "@weegigs/concurrent",
  "version": "0.0.0-development",
  "description": "Concurrency utilities for Typescript",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Kevin O'Neill <kevin@oneill.id.au>",
  "keywords": ["mutex", "semaphore", "typescript", "async", "await", "concurrent", "promise"],
  "scripts": {
    "build": "yarn run clean && yarn run lint && yarn run compile",
    "clean": "rimraf lib",
    "compile:tsc": "tsc -p .",
    "compile": "yarn run compile:tsc",
    "lint": "tslint -c tslint.json --project . \"src/**/*.ts\"",
    "test:unit": "jest \"tests/*\" --env=node --coverage",
    "test": "yarn run test:unit",
    "watch:tsc": "tsc -p . --watch",
    "watch:test": "jest \"tests/*\" --env=node --coverage --watch",
    "watch": "yarn run watch:tsc & yarn run watch:test",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@types/jest": "23.1.0",
    "@types/node": "10.3.3",
    "condition-circle": "2.0.1",
    "faker": "4.1.0",
    "jest": "23.1.0",
    "jest-cli": "23.1.0",
    "jest-environment-node-debug": "2.0.0",
    "prettier": "1.13.5",
    "rimraf": "2.6.2",
    "semantic-release": "15.5.2",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": ["ts", "js", "json"]
  },
  "engines": {
    "node": ">= 8.9.3"
  },
  "files": ["lib", "package.json", "README.md", "CHANGELOG.md", "LICENCE"],
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinoneill/wee-concurrent.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "publishConfig": {
    "access": "public"
  }
}
